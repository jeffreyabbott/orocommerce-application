{% extends 'OroUIBundle:actions:update.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% form_theme form with 'OroFormBundle:Form:fields.html.twig' %}

{% if form.vars.value.id %}
    {% set formAction = path('donation.application_update', { 'id': form.vars.value.id }) %}
{% else %}
    {% set formAction = path('donation.application_create') %}
{% endif %}

{% block navButtons %}
    {% if form.vars.value.id and is_granted('DELETE', form.vars.value) %}
        {{ UI.deleteButton({
            'dataUrl': path('donation.application_delete', {'id': form.vars.value.id}),
            'dataRedirect': path('donation.application_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-tag',
            'dataId': form.vars.value.id,
            'entity_label': 'EmbApplication'|trans
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.cancelButton(path('donation.application_index')) }}
    {% set html = UI.saveAndCloseButton() %}
    {% if is_granted('donation.application_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({ 'html': html }) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('donation.application_index'),
            'indexLabel': 'EmbApplications'|trans,
            'entityTitle': form.vars.value.embNumber
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'EmbApplication'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: 'test' } %}
    {% endif %}
{% endblock pageHeader %}

